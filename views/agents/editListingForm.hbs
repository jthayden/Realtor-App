<a class="btn btn-outline-light non-group-button" href="/agents/{{agent._id}}">Back to agent</a>

<h2>Edit Listing</h2>

<form method="POST" action="/listings/{{listing._id}}?_method=PUT">

  <label for="address">Address</label>
  <input type="text" name="address" id="address" value="{{listing.address}}">
<br>
  <label for="neighborhood">Neighborhood</label>
  <input type="text" name="neighborhood" id="neighborhood" value="{{listing.neighborhood}}">
<br>
  <label for="beds">Beds</label>
  <input type="number" name="beds" id="beds" value="{{listing.beds}}">
<br>
  <label for="baths">Baths</label>
  <input type="number" name="baths" id="baths" value="{{listing.baths}}">
<br>
  <label for="squareFootage">Square Footage</label>
  <input type="number" name="squareFootage" id="squareFootage" value="{{listing.squareFootage}}">
<br>
  <label for="price">Price</label>
  <input type="number" name="price" id="price" value="{{listing.price}}">
<br>
  <input type="submit" class="btn btn-outline-success non-group-button" value="Edit Listing" />
</form>
