<a class="btn btn-outline-light non-group-button" href="/agents/{{agentId}}">Back to agent</a>

<h2>New Listing</h2>

<form class="non-button" method="POST" action="/agents/{{agentId}}/listing">

  <label for="address">Address: </label>
  <input type="text" name="address" id="address" placeholder="address">
  <br>
  <label for="neighborhood">Neighborhood: </label>
  <input type="text" name="neighborhood" id="neighborhood" placeholder="neighborhood">
  <br>
  <label for="property-type">Property Type: </label>
  <input type="text" name="propertyType" id="property-type">
  <br>
  <label for="beds">Beds: </label>
  <input type="number" name="beds" id="beds" placeholder="beds">
  <br>
  <label for="baths">Baths: </label>
  <input type="number" name="baths" id="baths" placeholder="baths">
  <br>
  <label for="squareFootage">Square Footage: </label>
  <input type="number" name="squareFootage" id="squareFootage" placeholder="squareFootage">
  <br>
  <label for="price">Price: </label>
  <input type="number" name="price" id="price" placeholder="price">
  <br>
  <input type="submit" class="btn btn-outline-success non-group-button" value="Create Listing" />
</form>