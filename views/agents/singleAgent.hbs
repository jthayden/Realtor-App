<a class="btn btn-outline-secondary non-group-button" href="/agents/{{agent._id}}/listing/new">New Listing Form</a>

<h3>Listings</h3>

<ul>
    {{#each listing}}
   
    <li>Address:<a href="/listings/{{_id}}">{{address}}</a> </li>
    <li>Neighborhoods: {{neighborhood}}</li>
    <li>Bedrooms: {{beds}}</li>
    <li>Bathrooms: {{baths}}</li>
    <li>Square Footage: {{squareFootage}}</li>
    <li>Price: {{price}}</li>
    {{/each}}
</ul>

<a class="btn btn-outline-secondary non-group-button" href="/agents/{{agent._id}}/client/new">New Client Form</a>

<ul>
    {{#each client}}
    <li>Name:<a href="/clients/{{_id}}">{{name}}</a> </li>
    <li>Property Types: {{propertyTypes}}</li>
    <li>Neighborhoods: {{neighborhoods}}</li>
    <li>Price Range: {{priceRange}}</li>
    <li>Beds: {{beds}}</li>
    <li>Baths: {{baths}}</li>
    <li>Email: {{email}}</li>
    <li>Phone: {{phone}}</li>
    {{/each}}
</ul>