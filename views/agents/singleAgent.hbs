<a href="/agents">Back to all agents</a>

<h3>{{agent.name}}</h3>
<p>{{agent.specialty}}</p>
<p>{{agent.areasServed}}</p>
<p>{{agent.team}}</p>

<a href="/agents/{{agent._id}}/edit">Edit Agent</a>

<form action="/agents/{{agent._id}}?_method=DELETE" method="post">
    <input type="submit" value="Delete Agent">
</form>

<a href="/agents/{{agent._id}}/listing/new">New Listing Form</a>

<h3>Listings</h3>

<ul>
    {{#each listing}}
        <li>Address: {{address}}</li>
        <li>Neighborhoods: {{neighborhood}}</li>
        <li>Bedrooms: {{beds}}</li>
        <li>Bathrooms: {{baths}}</li>
        <li>Square Footage: {{squareFootage}}</li>
        <li>Price: {{price}}</li>
    {{/each}}
</ul>

<a href="/agents/{{agent._id}}/client/new">New Client Form</a>

<ul>
    {{#each client}}
        <li>Name: {{name}}</li>
        <li>Property Types: {{propertytypes}}</li>
        <li>Neighborhoods: {{neighborhoods}}</li>
        <li>Price Range: {{priceRange}}</li>
        <li>Beds: {{beds}}</li>
        <li>Baths: {{baths}}</li>
        <li>Email: {{email}}</li>
        <li>Phone: {{phone}}</li>
    {{/each}}
</ul>